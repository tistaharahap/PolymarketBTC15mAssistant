# Crypto 15m Assistant â€” Example environment variables
# Copy to .env and fill values as needed.

# =========================
# Web UI Auth (optional)
# =========================
# If BOTH are set, the whole web UI + API is protected with Basic Auth.
BASIC_AUTH_USER=
BASIC_AUTH_PASS=

# =========================
# Polymarket (HTTP)
# =========================
# Optional: pin a specific market slug (otherwise auto-select latest per asset)
POLYMARKET_SLUG=

# Optional: enable/disable auto-select latest market
POLYMARKET_AUTO_SELECT_LATEST=true

# Live-data WS URL used by the client (Current Price)
POLYMARKET_LIVE_WS_URL=wss://ws-live-data.polymarket.com

# Outcome labels
POLYMARKET_UP_LABEL=Up
POLYMARKET_DOWN_LABEL=Down

# =========================
# Binance
# =========================
# Note: the app currently uses src/config.js defaults for base URLs.
BINANCE_BASE_URL=https://api.binance.com

# =========================
# Polymarket Gamma / CLOB
# =========================
# Note: the app currently uses src/config.js defaults for base URLs.
GAMMA_BASE_URL=https://gamma-api.polymarket.com
CLOB_BASE_URL=https://clob.polymarket.com

# =========================
# Chainlink fallback (optional; CLI/legacy)
# =========================
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_RPC_URLS=
POLYGON_WSS_URL=
POLYGON_WSS_URLS=
CHAINLINK_BTC_USD_AGGREGATOR=0xc907E116054Ad103354f2D350FD2514433D57F6f

# =========================
# Assistant tuning
# =========================
# Note: the app currently uses src/config.js defaults for these.
POLL_INTERVAL_MS=1000
CANDLE_WINDOW_MINUTES=15

VWAP_SLOPE_LOOKBACK_MINUTES=5
RSI_PERIOD=14
RSI_MA_PERIOD=14

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# =========================
# Proxy support (optional)
# =========================
HTTP_PROXY=
HTTPS_PROXY=
ALL_PROXY=

# =========================
# Trading utilities (optional; NOT used by the web UI automatically)
# =========================
TRADING_ENABLED=false
POLY_PRIVATE_KEY=
POLY_FUNDER_ADDRESS=
POLY_CLOB_API=https://clob.polymarket.com
POLY_SIGNATURE_TYPE=
POLY_USE_SERVER_TIME=false
